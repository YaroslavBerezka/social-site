{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",                                
    "sourceMap": true,                             
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,                                
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"],
      "@static/*": ["./src/static/*"],    
    },
    "types": [ "@types/webrtc", "jest", "node",  ],
  }
  
}

